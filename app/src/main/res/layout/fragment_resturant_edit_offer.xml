<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fragment_Resturant_Edit_offer_tv_Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dim_xl"
                android:text="@string/edit_image_offer"
                android:textSize="@dimen/txt_size_ll" />

            <ImageView
                android:id="@+id/fragment_Resturant_Edit_offer_img_Edit"
                android:layout_width="@dimen/logo"
                android:layout_height="@dimen/logo"
                android:layout_below="@id/fragment_Resturant_Edit_offer_tv_Edit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dim_m"
                android:src="@drawable/defaut"

                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/fragment_Resturant_Edit_offer_ed_Edit_foodname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:layout_below="@id/fragment_Resturant_Edit_offer_img_Edit"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_m"
                android:background="@drawable/shape_layout_border"
            >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="add_name_offer"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingStart="@dimen/dim_l"
                    android:paddingEnd="@dimen/dim_l" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/fragment_Resturant_Edit_offer_ed_Edit_fooddiscription"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_10xl"
                android:layout_below="@id/fragment_Resturant_Edit_offer_ed_Edit_foodname"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_m"
                android:background="@drawable/shape_layout_border"

                >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="start"
                    android:hint="hint"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:lines="4"
                    android:maxLines="4"
                    android:padding="@dimen/dim_l"/>
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/fragment_Resturant_Edit_offer_tv_from_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_Resturant_Edit_offer_ed_Edit_fooddiscription"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dim_2xl"
                android:layout_marginEnd="@dimen/dim_xl"
                android:background="@drawable/shape_layout_border"
                android:drawableStart="@drawable/ic_date_range"
                android:text="من"
                android:drawablePadding="@dimen/dim_m"
                android:gravity="center_vertical|center_horizontal"

                />

            <TextView
                android:id="@+id/fragment_Resturant_Edit_offer_tv_to_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_Resturant_Edit_offer_ed_Edit_fooddiscription"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/dim_2xl"
                android:layout_marginTop="@dimen/dim_2xl"
                android:background="@drawable/shape_layout_border"
                android:drawableStart="@drawable/ic_date_range"
                android:drawablePadding="@dimen/dim_m"
                android:text="الي"
                android:gravity="center_vertical|center_horizontal"
                />


            <Button
                android:id="@+id/Fragment_Resturant_Edit_offer_btn_Edit"
                android:layout_width="@dimen/logo"
                android:layout_height="@dimen/dim_2xl"
                android:layout_below="@id/fragment_Resturant_Edit_offer_tv_from_date"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dim_3xl"
                android:layout_marginBottom="@dimen/dim_7xl"
                android:background="@drawable/shape_btn_splash"
                android:text="edit"
                android:textColor="@color/white"

                />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>