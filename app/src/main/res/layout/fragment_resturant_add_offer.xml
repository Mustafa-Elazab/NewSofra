<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fragment_Resturant_add_offer_tv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_image_offer"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dim_xl"
                android:textSize="@dimen/txt_size_ll"
                />

            <ImageView
                android:id="@+id/fragment_Resturant_add_offer_img_add"
                android:layout_width="@dimen/logo"
                android:layout_height="@dimen/logo"
                android:layout_below="@id/fragment_Resturant_add_offer_tv_add"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dim_m"
                android:src="@drawable/defaut"

                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/fragment_Resturant_add_offer_ed_add_foodname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:paddingStart="@dimen/dim_l"
                android:background="@drawable/shape_layout_border"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginEnd="@dimen/dim_m"
                android:layout_below="@id/fragment_Resturant_add_offer_img_add"
                android:layout_marginTop="@dimen/dim_l"
                android:paddingEnd="@dimen/dim_l"
                >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/add_name_offer"
                    android:background="@null"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:paddingStart="@dimen/dim_m"
                    android:paddingEnd="@dimen/dim_m"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/fragment_Resturant_add_offer_ed_add_fooddiscription"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_10xl"
                android:paddingStart="@dimen/dim_l"
                android:paddingEnd="@dimen/dim_l"
                android:background="@drawable/shape_layout_border"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginEnd="@dimen/dim_m"
                android:layout_below="@id/fragment_Resturant_add_offer_ed_add_foodname"
                android:layout_marginTop="@dimen/dim_l"


                >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="مختصرة"
                    android:background="@null"
                    android:gravity="start"
                    android:inputType="text"
                    android:lines="4"
                    android:maxLines="4"
                    android:imeOptions="actionNext"
                    android:paddingStart="@dimen/dim_m"
                    android:paddingEnd="@dimen/dim_m"
                    />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/fragment_Resturant_add_offer_tv_from_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_Resturant_add_offer_ed_add_fooddiscription"
                android:layout_marginTop="@dimen/dim_3xl"
                android:layout_marginStart="@dimen/dim_xl"
                android:layout_marginEnd="@dimen/dim_3xl"
                android:text="من"
                android:background="@drawable/shape_layout_border"
                android:drawableStart="@drawable/ic_date_range"
                android:padding="@dimen/dim_s"
                android:drawablePadding="@dimen/dim_2xl"
                android:layout_alignParentEnd="true"
                />

            <TextView
                android:id="@+id/fragment_Resturant_add_offer_tv_to_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_Resturant_add_offer_ed_add_fooddiscription"
                android:layout_marginTop="@dimen/dim_3xl"
                android:layout_marginStart="@dimen/dim_3xl"
                android:layout_marginEnd="@dimen/dim_xl"
                android:text="الي"
                android:background="@drawable/shape_layout_border"
                android:drawableStart="@drawable/ic_date_range"
                android:padding="@dimen/dim_s"
                android:drawablePadding="@dimen/dim_2xl"
                android:layout_alignParentStart="true"

                />


            <Button
                android:id="@+id/Fragment_Resturant_add_offer_btn_add"
                android:layout_width="@dimen/logo"
                android:layout_height="@dimen/dim_2xl"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dim_7xl"
                android:layout_marginTop="@dimen/dim_3xl"
                android:background="@drawable/shape_btn_splash"
                android:text="@string/add"
                android:textColor="@color/white"
                android:layout_below="@id/fragment_Resturant_add_offer_tv_from_date"

                />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>