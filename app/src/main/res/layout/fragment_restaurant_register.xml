<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_back"

    >



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:background="@drawable/loginbackfround"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Fragment_Resturant_register_img_profile"
                android:layout_width="@dimen/dim_9xl"
                android:layout_height="@dimen/dim_9xl"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dim_2xl"
                android:src="@drawable/newuser" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Fragment_Resturant_register_ed_restaurantname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:layout_below="@id/Fragment_Resturant_register_img_profile"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginTop="@dimen/dim_xl"
                android:layout_marginEnd="@dimen/dim_m"


                >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:drawableEnd="@drawable/ic_perm_identity_black"
                    android:drawablePadding="@dimen/dim_m"
                    android:hint="اسم المطعم"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"

                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Fragment_Resturant_register_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:layout_below="@id/Fragment_Resturant_register_ed_restaurantname"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_m"

                >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:drawableEnd="@drawable/ic_email_white"
                    android:drawablePadding="@dimen/dim_m"
                    android:hint="البريد الالكتروني"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"

                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Fragment_Resturant_register_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:layout_below="@id/Fragment_Resturant_register_email"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_m">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:drawableEnd="@drawable/ic_call_black"
                    android:drawablePadding="@dimen/dim_m"
                    android:hint="الجوال"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />
            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:layout_below="@id/Fragment_Resturant_register_phone"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_m"
                android:layoutDirection="rtl"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_home_black"
                    tools:ignore="VectorDrawableCompat" />

                <Spinner
                    android:id="@+id/Fragment_Resturant_register_sp_city"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dim_m"
                    android:layout_marginEnd="@dimen/dim_m"
                    android:padding="@dimen/dim_l"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:layout_below="@id/relative"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_m"
                android:layoutDirection="rtl"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_home_black"
                    tools:ignore="VectorDrawableCompat" />

                <Spinner
                    android:id="@+id/Fragment_Resturant_register_sp_block"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dim_m"
                    android:layout_marginEnd="@dimen/dim_m"
                    android:padding="@dimen/dim_l"
                    />
            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Fragment_Resturant_register_ed_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:layout_below="@id/relative2"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_m">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:drawableEnd="@drawable/ic_lock_black"
                    android:drawablePadding="@dimen/dim_m"
                    android:hint="كلمة المرور"
                    android:imeOptions="actionNext"
                    android:inputType="textWebPassword"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Fragment_Resturant_register_ed_password_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:layout_below="@id/Fragment_Resturant_register_ed_password"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_m">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignStart="@+id/Fragment_Resturant_register_ed_password_confirm"
                    android:layout_alignBottom="@+id/Fragment_Resturant_register_ed_password_confirm"
                    android:backgroundTint="@color/white"
                    android:drawableEnd="@drawable/ic_lock_black"
                    android:drawablePadding="@dimen/dim_m"
                    android:hint="كلمة المرور"
                    android:imeOptions="actionNext"
                    android:inputType="textWebPassword"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/Fragment_Resturant_register_btn_continue"
                android:layout_width="@dimen/dim_8xl"
                android:layout_height="@dimen/dim_2xl"
                android:layout_below="@id/Fragment_Resturant_register_ed_password_confirm"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginTop="@dimen/dim_2xl"
                android:layout_marginEnd="@dimen/dim_m"
                android:layout_marginBottom="@dimen/dim_xl"
                android:background="@drawable/shape_btn_splash"
                android:text="متابعة"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_xl" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>