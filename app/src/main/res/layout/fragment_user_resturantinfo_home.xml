<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Fragment_resturantinfo_resturant_image"
            android:layout_width="@dimen/dim_12xl"
            android:layout_height="@dimen/dim_12xl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dim_m"
            android:src="@drawable/reslogo" />

        <TextView
            android:id="@+id/Fragment_resturantinfo_resturant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Fragment_resturantinfo_resturant_image"
            android:text="دجاج كنتاكي"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dim_m"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/txt_size_xl"
            />
        <android.support.design.widget.TabLayout
            android:id="@+id/Fragment_resturantinfo_resturant_tablayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_tool_bar"
            android:layout_below="@id/Fragment_resturantinfo_resturant_name"
            android:layout_marginTop="@dimen/dim_s"
            ></android.support.design.widget.TabLayout>


        <android.support.v4.view.ViewPager
            android:id="@+id/Fragment_resturantinfo_resturant_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dim_s"
            android:layout_below="@id/Fragment_resturantinfo_resturant_tablayout"
            ></android.support.v4.view.ViewPager>
    </RelativeLayout>
</RelativeLayout>