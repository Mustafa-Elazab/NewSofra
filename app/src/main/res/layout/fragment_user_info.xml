<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Fragment_user_edit_img_profile"
                android:layout_width="@dimen/dim_9xl"
                android:layout_height="@dimen/dim_9xl"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dim_5xl"
                android:src="@drawable/newuser" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Fragment_user_edit_ed_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:layout_below="@id/Fragment_user_edit_img_profile"
                android:layout_marginStart="@dimen/dim_2xl"
                android:layout_marginTop="@dimen/dim_xl"
                android:layout_marginEnd="@dimen/dim_2xl">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:drawableEnd="@drawable/ic_perm_identity_black"
                    android:drawablePadding="@dimen/dim_m"
                    android:hint="@string/name"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="@dimen/txt_size_l"
                    android:textStyle="bold"
                    android:imeOptions="actionNext"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Fragment_user_edit_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:layout_below="@id/Fragment_user_edit_ed_name"
                android:layout_marginStart="@dimen/dim_2xl"
                android:layout_marginTop="@dimen/dim_m"
                android:layout_marginEnd="@dimen/dim_2xl">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:drawableEnd="@drawable/ic_email_white"
                    android:drawablePadding="@dimen/dim_m"
                    android:hint="البريد الالكتروني"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="@dimen/txt_size_l"
                    android:textStyle="bold"
                    android:imeOptions="actionNext"

                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Fragment_user_edit_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:layout_below="@id/Fragment_user_edit_email"
                android:layout_marginStart="@dimen/dim_2xl"
                android:layout_marginTop="@dimen/dim_m"
                android:layout_marginEnd="@dimen/dim_2xl">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:drawableEnd="@drawable/ic_call_black"
                    android:drawablePadding="@dimen/dim_m"
                    android:hint="الجوال"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="@dimen/txt_size_l"
                    android:textStyle="bold"
                    android:imeOptions="actionNext"

                    />
            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:layout_below="@id/Fragment_user_edit_phone"
                android:layout_marginStart="@dimen/dim_2xl"
                android:layout_marginTop="@dimen/dim_m"
                android:layout_marginEnd="@dimen/dim_2xl"
                android:layoutDirection="rtl"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_home_black" />

                <Spinner
                    android:id="@+id/Fragment_user_edit_sp_city"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:layout_below="@id/relative"
                android:layout_marginStart="@dimen/dim_2xl"
                android:layout_marginTop="@dimen/dim_m"
                android:layout_marginEnd="@dimen/dim_2xl"
                android:layoutDirection="rtl"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_home_black" />

                <Spinner
                    android:id="@+id/Fragment_user_edit_sp_block"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    />
            </RelativeLayout>


            <Button
                android:id="@+id/Fragment_user_edit_btn_continue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_3xl"
                android:layout_below="@id/relative2"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/dim_10xl"
                android:layout_marginTop="@dimen/dim_2xl"
                android:layout_marginEnd="@dimen/dim_10xl"
                android:background="@drawable/shape_btn_splash"
                android:text="@string/edit"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_xl"
                android:layout_marginBottom="@dimen/dim_7xl"
                />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>