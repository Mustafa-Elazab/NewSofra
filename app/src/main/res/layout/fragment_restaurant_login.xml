<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back"
    >

        <RelativeLayout
            android:id="@+id/relative_write"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/loginbackfround">

            <TextView
                android:id="@+id/Fragment_login_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dim_9xl"
                android:text="@string/login"
                android:textSize="@dimen/txt_size_3xl" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Fragment_login_ed_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/Fragment_login_login"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginTop="@dimen/dim_3xl"
                android:layout_marginEnd="@dimen/dim_m"

                >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:drawableEnd="@drawable/ic_email_white"
                    android:drawablePadding="@dimen/dim_m"
                    android:hint="البريد الالكتروني"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Fragment_login_ed_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/Fragment_login_ed_email"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_m"

                >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:drawableEnd="@drawable/ic_lock_black"
                    android:drawablePadding="@dimen/dim_m"
                    android:hint="كلمة المرور"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/Fragment_login_tv_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Fragment_login_ed_password"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginTop="@dimen/dim_s"
                android:layout_marginEnd="@dimen/dim_m"
                android:text="@string/forget_password"
                android:textColor="@color/colorAccent" />


            <Button
                android:id="@+id/Fragment_login_btn_enter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_3xl"
                android:layout_below="@id/Fragment_login_tv_forget_password"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/dim_10xl"
                android:layout_marginTop="@dimen/dim_2xl"
                android:layout_marginEnd="@dimen/dim_10xl"
                android:background="@drawable/shape_btn_splash"
                android:text="@string/enter"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_l" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_2xl"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_dark"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dim_m"
                    android:layout_marginBottom="@dimen/dim_ss"
                    android:text="ليس لديك حساب ؟"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_m"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Fragment_login_tv_create_account"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dim_m"
                    android:layout_marginBottom="@dimen/dim_ss"
                    android:text=" اضغط هنا"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/txt_size_m"
                    android:textStyle="bold"

                    />
            </LinearLayout>

        </RelativeLayout>
</RelativeLayout>