<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_m"
        android:layout_marginTop="@dimen/dim_m"
        android:layout_marginEnd="@dimen/dim_m">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circlue"
            android:layout_width="@dimen/dim_8xl"
            android:layout_height="@dimen/dim_8xl"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dim_m"
            android:src="@drawable/reslogo" />

        <LinearLayout
            android:id="@+id/Linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dim_l"
            android:layout_toStartOf="@id/circlue"
            android:layoutDirection="rtl"
            android:orientation="vertical"
            android:padding="@dimen/dim_m"
            >

            <TextView
                android:id="@+id/restaurant_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="دجاج كنتاكي"
                android:textSize="@dimen/txt_size_l"
                android:padding="@dimen/dim_ss"
                />

            <TextView
                android:id="@+id/restaurant_order"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="دجاج كنتاكي"
                android:textSize="@dimen/txt_size_m"
                android:padding="@dimen/dim_ss"

                />

            <TextView
                android:id="@+id/restaurant_total"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dim_s"
                android:layout_weight="2"
                android:text="الاجمالي"
                android:textSize="@dimen/txt_size_m"
                android:padding="@dimen/dim_ss"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="@dimen/dim_8xl"
            android:layout_height="@dimen/dim_8xl"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dim_l"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_rec"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="@dimen/dim_m"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_green"
                android:text="استلام"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_m"
                android:textStyle="bold"

                />

            <Button
                android:id="@+id/button_ref"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dim_s"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_splash"
                android:text="رفض"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_m"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relative"
        android:layout_marginStart="@dimen/dim_m"
        android:layout_marginTop="@dimen/dim_m"
        android:layout_marginEnd="@dimen/dim_m"
        android:background="@color/gray_dark" />
</RelativeLayout>