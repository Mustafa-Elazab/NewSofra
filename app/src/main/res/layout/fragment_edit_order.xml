<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relative_write"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fragment_resturant_editfood_tv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" صوره للمنتج"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dim_m"
                android:textSize="@dimen/txt_size_ll"
                />

            <ImageView
                android:id="@+id/fragment_resturant_editfood_img_add"
                android:layout_width="@dimen/dim_image"
                android:layout_height="@dimen/dim_image"
                android:layout_below="@id/fragment_resturant_editfood_tv_add"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dim_xl"
                android:src="@drawable/defaut"
                android:scaleType="centerCrop"

                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/fragment_resturant_editfood_ed_add_foodname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:paddingStart="@dimen/dim_l"
                android:background="@drawable/shape_ed_white_rect"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginEnd="@dimen/dim_m"
                android:layout_below="@id/fragment_resturant_editfood_img_add"
                android:layout_marginTop="@dimen/dim_l"
                android:paddingEnd="@dimen/dim_l"
                >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/name_food"
                    android:background="@null"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:paddingStart="@dimen/dim_m"
                    android:paddingEnd="@dimen/dim_m"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/fragment_resturant_editfood_ed_add_fooddiscription"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_10xl"
                android:paddingStart="@dimen/dim_l"
                android:paddingEnd="@dimen/dim_l"
                android:background="@drawable/shape_ed_white_rect"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginEnd="@dimen/dim_m"
                android:layout_below="@id/fragment_resturant_editfood_ed_add_foodname"
                android:layout_marginTop="@dimen/dim_l"


                >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="مختصرة"
                    android:background="@null"
                    android:gravity="start"
                    android:inputType="text"
                    android:lines="4"
                    android:maxLines="4"
                    android:imeOptions="actionNext"
                    android:paddingStart="@dimen/dim_m"
                    android:paddingEnd="@dimen/dim_m"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/fragment_resturant_editfood_ed_add_foodprice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:paddingStart="@dimen/dim_l"
                android:background="@drawable/shape_ed_white_rect"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginEnd="@dimen/dim_m"
                android:layout_below="@id/fragment_resturant_editfood_ed_add_fooddiscription"
                android:layout_marginTop="@dimen/dim_l"
                android:paddingEnd="@dimen/dim_l"

                >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/price"
                    android:background="@null"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:paddingStart="@dimen/dim_m"
                    android:paddingEnd="@dimen/dim_m"

                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/fragment_resturant_editfood_ed_add_fooddiscount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:paddingStart="@dimen/dim_l"
                android:background="@drawable/shape_ed_white_rect"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginEnd="@dimen/dim_m"
                android:layout_below="@id/fragment_resturant_editfood_ed_add_foodprice"
                android:layout_marginTop="@dimen/dim_l"
                android:paddingEnd="@dimen/dim_l"
                >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/price_on_sale"
                    android:background="@null"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:paddingStart="@dimen/dim_m"
                    android:paddingEnd="@dimen/dim_m"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/fragment_resturant_editfood_ed_add_foodready"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:paddingStart="@dimen/dim_l"
                android:background="@drawable/shape_ed_white_rect"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginEnd="@dimen/dim_m"
                android:layout_below="@id/fragment_resturant_editfood_ed_add_fooddiscount"
                android:layout_marginTop="@dimen/dim_l"
                android:paddingEnd="@dimen/dim_l"

                >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/time_for_ready"
                    android:background="@null"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:paddingStart="@dimen/dim_m"
                    android:paddingEnd="@dimen/dim_m"
                    />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/fragment_resturant_editfood_btn_add_food"
                android:layout_width="@dimen/dim_20xl"
                android:layout_height="@dimen/dim_3xl"
                android:layout_below="@id/fragment_resturant_editfood_ed_add_foodready"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_btn_splash"
                android:text="@string/edit"
                android:textSize="@dimen/txt_size_ll"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:layout_marginBottom="@dimen/dim_l"
                android:layout_marginTop="@dimen/dim_2xl"
                />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>