<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relative">
<com.chauthai.swipereveallayout.SwipeRevealLayout
    android:id="@+id/Activity_Item_PsIv_Activity_Swipe_Layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim_s"
    android:background="@null"
    android:paddingTop="@dimen/dim_sss"
    android:paddingBottom="@dimen/dim_sss"
    app:dragEdge="left"
    app:mode="same_level">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dim_l"
        android:background="@null"
        android:gravity="center_vertical"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dim_l"
        android:paddingEnd="@dimen/dim_l">

        <ImageView
            android:id="@+id/Swipe_Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_m"
            android:layout_marginEnd="@dimen/dim_m"
            app:srcCompat="@drawable/ic_edit_solid"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/Swipe_Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_m"
            android:layout_marginEnd="@dimen/dim_m"
            app:srcCompat="@drawable/ic_delete_black"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dim_m"
        android:layout_marginTop="@dimen/dim_sss"
        android:layout_marginEnd="@dimen/dim_m"
        android:background="@drawable/shape_rectangel_corner_reduice">

        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:id="@+id/List_categories_home_Image"
            android:layout_width="@dimen/dim_10xl"
            android:layout_height="@dimen/dim_8xl"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dim_m"
            android:layout_marginTop="@dimen/dim_s"
            android:layout_marginEnd="@dimen/dim_m"
            android:layout_marginBottom="@dimen/dim_s"
            android:background="@drawable/shape_rectangel_corner_reduice"
            app:siShape="@drawable/shape_rounded_all_rectangle"
            app:srcCompat="@drawable/ic_perm_identity_white"
            tools:ignore="VectorDrawableCompat" />


        <TextView
            android:id="@+id/List_categories_order_home_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dim_s"
            android:layout_marginEnd="@dimen/dim_s"
            android:layout_marginBottom="@dimen/dim_m"
            android:layout_toStartOf="@id/List_categories_home_Image"
            android:layout_weight="2"
            android:layoutDirection="rtl"
            android:orientation="vertical"
            android:text="بيتزا"
            android:textSize="@dimen/txt_size_xl"
            android:textStyle="bold" />

    </RelativeLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>
</RelativeLayout>