<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >


    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_m"
        android:layout_marginTop="@dimen/dim_m"
        android:layout_marginEnd="-50dp"
        android:layout_toStartOf="@id/List_Detail_Img_ResImg_Rv"
        android:background="@drawable/shape_rect_gray"

        >


        <TextView
            android:id="@+id/List_Detail_Tv_ResName_Rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dim_xl"
            android:layout_marginEnd="@dimen/dim_5xl"
            android:text="دجاج كنتاكي"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/txt_size_ll"

            />


        <ImageView
            android:id="@+id/Activity_home_img_notifications_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/List_Detail_Tv_ResName_Rv"
            android:layout_toEndOf="@id/list_open"
            android:layout_marginTop="@dimen/dim_s"/>
        <TextView
            android:id="@+id/list_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dim_l"
            android:layout_marginTop="@dimen/dim_xl"
            android:layout_marginEnd="@dimen/dim_ss"
            android:layoutDirection="rtl"
            android:text="مفتوح "
            android:textSize="@dimen/txt_size_m" />


        <RatingBar
            android:id="@+id/List_Detail_Rat_Rate_Rv"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dim_xl"
            android:layout_below="@+id/List_Detail_Tv_ResName_Rv"
            android:layout_alignEnd="@+id/List_Detail_Tv_ResName_Rv"
            android:layout_marginTop="@dimen/dim_sss"
            android:numStars="5"
            android:rating="2"
            android:stepSize="2" />


        <TextView
            android:id="@+id/List_Detail_Tv_Minmum_Rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/List_Detail_Rat_Rate_Rv"
            android:layout_alignEnd="@+id/List_Detail_Tv_ResName_Rv"
            android:layout_marginTop="@dimen/dim_m"
            android:text="الحد الادني للطلب :15 ريال"

            />


        <TextView
            android:id="@+id/List_Detail_Tv_ResDelviery_Rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/List_Detail_Tv_Minmum_Rv"
            android:layout_marginTop="@dimen/dim_m"
            android:layout_alignEnd="@+id/List_Detail_Tv_ResName_Rv"
            android:text="رسوم التوصيل :15 ريال"
            android:textSize="@dimen/txt_size_m" />

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/List_Detail_Img_ResImg_Rv"
        android:layout_width="@dimen/dim_12xl"
        android:layout_height="@dimen/dim_12xl"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="@dimen/dim_l"
        android:layout_marginEnd="0dp"
        android:src="@drawable/reslogo" />
</RelativeLayout>