<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/login_back"
        android:scaleType="centerCrop"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/loginbackfround"
            >

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:layout_marginStart="@dimen/dim_2xl"
                android:layout_marginTop="@dimen/dim_2xl"
                android:layout_marginEnd="@dimen/dim_2xl"
                android:layoutDirection="rtl"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:paddingStart="@dimen/dim_m"
                    app:srcCompat="@drawable/ic_perm_identity_black" />

                <Spinner
                    android:id="@+id/Fragment_seller_register_sp_categories"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    />
            </RelativeLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/Fragment_seller_register2_ed_min"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:layout_below="@id/relative"
                android:layout_marginStart="@dimen/dim_2xl"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_2xl">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:drawableEnd="@drawable/banknote"
                    android:drawablePadding="@dimen/dim_m"
                    android:hint="الحد الادني للطلب"
                    android:imeOptions="actionNext"

                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Fragment_seller_register2_ed_delivery"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:layout_below="@id/Fragment_seller_register2_ed_min"
                android:layout_marginStart="@dimen/dim_2xl"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_2xl">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:drawableEnd="@drawable/scooter"
                    android:drawablePadding="@dimen/dim_m"
                    android:hint="رسوم التوصيل"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/Fragment_seller_register2_tv_delivery_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Fragment_seller_register2_ed_delivery"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/dim_2xl"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_2xl"
                android:text="@string/delivery_detail"
                android:textSize="@dimen/txt_size_xl"
                android:textStyle="bold" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/Fragment_seller_register2_ed_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:layout_below="@id/Fragment_seller_register2_tv_delivery_detail"
                android:layout_marginStart="@dimen/dim_2xl"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_2xl">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:drawableEnd="@drawable/ic_call_black"
                    android:drawablePadding="@dimen/dim_m"
                    android:hint="الجوال"
                    android:imeOptions="actionNext"
                    android:inputType="phone"

                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Fragment_seller_register2_ed_whatsapp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_4xl"
                android:layout_below="@id/Fragment_seller_register2_ed_phone"
                android:layout_marginStart="@dimen/dim_2xl"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_2xl">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:drawableEnd="@drawable/whatsapp"
                    android:drawablePadding="@dimen/dim_m"
                    android:hint="واتس اب"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/Fragment_seller_register2_tv_market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Fragment_seller_register2_ed_whatsapp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/dim_2xl"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_2xl"
                android:text="@string/market_image"
                android:textSize="@dimen/txt_size_xl"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/Fragment_seller_register2_img_market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_store_mall"
                android:layout_below="@+id/Fragment_seller_register2_tv_market"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/dim_2xl"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_2xl"
                />

            <Button
                android:id="@+id/Fragment_seller_register2_btn_sign"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_3xl"
                android:layout_below="@id/Fragment_seller_register2_img_market"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/dim_10xl"
                android:layout_marginTop="@dimen/dim_2xl"
                android:layout_marginEnd="@dimen/dim_10xl"
                android:background="@drawable/shape_btn_splash"
                android:text="@string/sign"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_xl"

                />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>